<html>

<head>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1>
        <%= title %>
    </h1>

    <div class="message-details">
        <p><strong>Author:</strong>
            <span class="message-text">
                <%= message.author %>
            </span>
        </p>
        <p><strong>Message:</strong>
            <span class="message-text">
                <%= message.content %>
            </span>
        </p>
        <p><strong>Added:</strong>
            <span class="message-text">
                <%= new Date(message.created_at).toLocaleString() %>
            </span>
        </p>
    </div>

    <a href="/">go back</a>
</body>

</html>